{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "simple-app-deployment"
  },
  "spec": {
    "replicas": 2, 
    "template": { 
      "metadata": {
        "labels": {
          "app": "simple-app"
        }
      },
      "spec": {
        "containers": [{
          "name": "simple-app",
          "image": "abirdatta/poc:v%BUILD_NUMBER%",
          "ports": [{
            "containerPort": 8080
          }]
         }]
      }
    }
  }
}
